{
  "name": "mcp-webdriverio",
  "version": "0.1.3",
  "description": "WebdriverIO MCP Server",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/lib/server.js",
  "bin": {
    "mcp-webdriverio": "dist/bin/mcp-webdriverio.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/bin/mcp-webdriverio.js",
    "dev": "tsc -w",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "mcp",
    "webdriverio",
    "automation",
    "testing",
    "browser",
    "selenium"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "latest",
    "@wdio/cli": "^8.32.5",
    "@wdio/local-runner": "^8.32.5",
    "@wdio/mocha-framework": "^8.32.5",
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "webdriverio": "^8.32.5"
  },
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/jest": "^29.5.12",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.19",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    }
  },
  "engines": {
    "node": ">=18"
  }
}
