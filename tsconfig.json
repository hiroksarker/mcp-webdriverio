{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": ".",
        "declaration": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "allowJs": true,
        "lib": ["ES2020", "DOM"],
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*", "src/*"]
        },
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ]
    },
    "include": [
        "src/**/*",
        "tests/**/*"
    ],
    "exclude": ["node_modules", "dist"]
}