{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": ".",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "target": "ESNext",
        "esModuleInterop": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "sourceMap": true,
        "lib": ["ES2020", "DOM"],
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*", "src/*"]
        },
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ]
    },
    "include": [
        "src/**/*",
        "tests/**/*"
    ],
    "exclude": ["node_modules", "dist"],
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}